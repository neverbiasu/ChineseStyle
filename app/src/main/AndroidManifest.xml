<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChineseStyle"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_permission_config"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity">
        </activity>

        <!-- Declare OperaDetailActivity here -->
        <activity android:name=".OperaDetailActivity" />

        <!-- Declare PaintingDetailActivity here -->
        <activity android:name=".PaintingDetailActivity" />

        <!-- Declare FestivalDetailActivity here -->
        <activity android:name=".FestivalDetailActivity" />

        <!-- Declare ClassicDetailActivity here -->
        <activity android:name=".ClassicDetailActivity" />

        <!-- Declare RegisterActivity here -->
        <activity android:name=".RegisterActivity" />

        <!-- Declare LoginActivity here -->
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare SettingsActivity here -->
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>
